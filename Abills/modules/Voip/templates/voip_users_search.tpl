<div class='card card-primary card-outline col-md-6'>
    <div class='card-header with-border'></div>

    <div class='card-body'>
        <div class="form-group row">
                <label class='col-md-3 control-label' for='IP'>IP (>,<):</label>
                <div class="input-group col-md-9">
                    <textarea class='form-control col-md-12' rows='2' name='IP' id='IP'>%IP%</textarea>
                </div>
        </div>

        <div class="form-group row">
                <label class='col-md-3 control-label' for='CID'>CID:</label>
                <div class="input-group col-md-9">
                    <textarea class='form-control col-md-12' rows='2' name='CID' id='CID'>%CID%</textarea>
                </div>
        </div>

        <div class="form-group row">
                <label class='col-md-3 control-label' for='CID'>_{NUMBER}_ (>,<):</label>
                <div class="input-group col-md-9">
                    <textarea class='form-control col-md-12' rows='2' name='NUMBER' id='NUMBER'>%NUMBER%</textarea>
                </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12 col-md-6">
                <label class='col-md-12 col-sm-12 control-label' >_{STATUS}_:</label>
                <div class="input-group">
                    %STATUS_SEL%
                </div>
            </div>

                <div class="col-sm-12 col-md-5">
                    <label class='col-md-12 col-sm-12 control-label' >_{TARIF_PLANS}_</label>
                    <div class="input-group">
                        %TP_SEL%
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-12 col-md-11">
                    <label class='col-md-12 col-sm-12 control-label' >_{GROUPS}_</label>
                    <div class="input-group">
                        %GROUP_SEL%
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
