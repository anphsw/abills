#!perl
=head1 NAME
  3play - module for connecting Internet, IPTV and VOIP tarifs in one
  Error ID: 13xx
=cut

=head1 Synopsis
  This module give you opportunity to connect Internet, IPTV and VOIP tarif plans in one package.

	Capabilities:
		- Grouping of services
		- Maintaining packet service reports
=cut

=head1 Usage

=cut

use strict;
use warnings FATAL => 'all';

use Triplay;
use Triplay::Services;
use Tariffs;

our (
  $db,
  %lang,
  $admin,
  %permissions
);

our Abills::HTML $html;

my $Triplay = Triplay->new($db, $admin, \%conf);
my $Tariffs = Tariffs->new($db, \%conf, $admin);


#**********************************************************
=head2 triplay_tp($attr) - main module function

  Arguments:


  Returns:

=cut
#**********************************************************
sub triplay_tp {

  require Control::Services;

  $Triplay->{ACTION}='add';
  $Triplay->{ACTION_LNG}=$lang{ADD};

  # add tp to database
  if ($FORM{add}) {
    $Triplay->tp_add({
      NAME        => $FORM{NAME},
      INTERNET_TP => $FORM{INTERNET_TP},
      IPTV_TP     => $FORM{IPTV_TP},
      VOIP_TP     => $FORM{VOIP_TP},
      COMMENT     => $FORM{COMMENT}
    });

    if (!$Triplay->{errno}) {
      $html->message('info', $lang{INFO}, "$lang{TARIF_PLAN} $lang{ADDED}");
    }
  }
  # change tp in database
  elsif ($FORM{change}) {
    $Triplay->tp_change({
      ID => $FORM{chg},
      %FORM
    });

    if (!$Triplay->{errno}) {
      $html->message('info', "$lang{SUCCESS}", "$lang{TARIF_PLAN} $lang{CHANGED}");
    }
  }
  # get info about tp
  elsif ($FORM{chg}) {
    $Triplay->{ACTION} = 'change';
    $Triplay->{ACTION_LNG} = $lang{CHANGE};
    $Triplay->tp_info({ ID => $FORM{chg} });

    _error_show($Triplay);
  }
  # delete tp from database
  elsif ($FORM{del} && $FORM{COMMENT}) {
    $Triplay->tp_del({ ID => $FORM{del} });

    if (!$Triplay->{errno}) {
      $html->message('info', $lang{INFO}, "$lang{TARIF_PLAN} $lang{DELETED}");
    }
  }

  _error_show($Triplay);

  # my $iptv_tps = $Tariffs->list({ MODULE => 'Iptv', COLS_NAME => 1 });
  # my $internet_tps = $Tariffs->list({ MODULE => 'Internet', COLS_NAME => 1 });
  # my $voip_tps = $Tariffs->list({ MODULE => 'Voip', COLS_NAME => 1 });

  # select for iptv tps
  my $iptv_select = sel_tp({
    MODULE => 'Iptv',
    TP_ID  => $Triplay->{IPTV_TP},
    SELECT => 'IPTV_TP'
  });
  #   $html->form_select(
  #   'IPTV_TP',
  #   {
  #     SELECTED     => $tp_info->{iptv_tp},
  #     SEL_LIST     => $iptv_tps,
  #     SEL_KEY      => 'id',
  #     SEL_VALUE    => 'name',
  #     NO_ID        => 1,
  #     SEL_OPTIONS  => { '' => '--' },
  #     ARRAY_NUM_ID => 1
  #   }
  # );

  # select for dv tps
  my $internet_select = sel_tp({
    MODULE => 'Internet',
    TP_ID  => $Triplay->{INTERNET_TP},
    SELECT => 'INTERNET_TP'
  });
  #   $html->form_select(
  #   'INTERNET_TP',
  #   {
  #     SELECTED     => $tp_info->{internet_tp},
  #     SEL_LIST     => $internet_tps,
  #     SEL_KEY      => 'id',
  #     SEL_VALUE    => 'name',
  #     NO_ID        => 1,
  #     SEL_OPTIONS  => { '' => '--' },
  #     ARRAY_NUM_ID => 1
  #   }
  # );

  # select for voip tps
  my $voip_select = sel_tp({
    MODULE => 'Voip',
    TP_ID  => $Triplay->{VOIP_TP},
    SELECT => 'VOIP_TP'
  });
  #   $html->form_select(
  #   'VOIP_TP',
  #   {
  #     SELECTED     => $tp_info->{voip_tp},
  #     SEL_LIST     => $voip_tps,
  #     SEL_KEY      => 'id',
  #     SEL_VALUE    => 'name',
  #     NO_ID        => 1,
  #     SEL_OPTIONS  => { '' => '--' },
  #     ARRAY_NUM_ID => 1
  #   }
  # );

  # template with all data
  $html->tpl_show(_include('triplay_tp', 'Triplay'), {
    %$Triplay,
    #BUTTON   => $button,
    INTERNET => $internet_select,
    IPTV     => $iptv_select,
    VOIP     => $voip_select,
    #ACTION   => $action,
    INDEX    => $index,
  });

  result_former({
    INPUT_DATA      => $Triplay,
    FUNCTION        => 'tp_list',
    BASE_FIELDS     => 6,
    DEFAULT_FIELDS  => "id, name, internet_name, iptv_name, voip_name, comment",
    FUNCTION_FIELDS => 'change, del',
    EXT_TITLES      => {
      'id'            => 'ID',
      'name'          => "$lang{NAME}",
      'internet_name' => "Internet",
      'iptv_name'     => "IPTV",
      'voip_name'     => "VOIP",
      'comment'       => "$lang{COMMENTS}"
    },
    TABLE           => {
      width   => '100%',
      caption => "$lang{TARIF_PLANS}",
      qs      => $pages_qs,
      ID      => 'TRIPLAY_TP',
      header  => '',
      EXPORT  => 1,
      MENU    => "$lang{ADD}:index=" . get_function_index('triplay_tp') . ':add' . ";",
    },
    MAKE_ROWS       => 1,
    SEARCH_FORMER   => 1,
    MODULE          => 'Triplay',
    TOTAL           => 1
  });

  return 1;
}

#**********************************************************
=head2 triplay_user($attr) - in menu services

  Arguments:


  Returns:

=cut
#**********************************************************
sub triplay_user {
  my ($attr) = @_;

  my $services_info = '';
  $Triplay->{ACTION}='add';
  $Triplay->{ACTION_LNG}=$lang{ADD};

  $Triplay->{debug}=1;

  if ($FORM{add}) {
    $Triplay->user_add(\%FORM);

    if (!$Triplay->{errno}) {
      $html->message('info', $lang{INFO}, "$lang{USER} $lang{ADDED}");

      my $triplay_tp_info = $Triplay->tp_info({ID => $FORM{TP_ID} });

      my $internet_tp_id = $triplay_tp_info->{internet_tp};
      my $iptv_tp_id = $triplay_tp_info->{iptv_tp};
      my $internet_tp_info = $Tariffs->list({ TP_ID => $internet_tp_id, COLS_NAME => 1 });
      my $iptv_tp_info = $Tariffs->list({ TP_ID => $iptv_tp_id, COLS_NAME => 1 });

      require Internet::Users;
      internet_user_add({
        UID   => $FORM{UID},
        TP_ID => $internet_tp_info->[0]{tp_id},
      });

      require Iptv::Users;
      iptv_user_add({
        UID   => $FORM{UID},
        TP_ID => $iptv_tp_info->[0]{tp_id},
      })
    }
    else {
      if ($Triplay->{errno} == 3) {
        $html->message('err', "$lang{WRONG} $lang{TARIF_PLAN}", "$lang{CHOOSE} $lang{TARIF_PLAN}", { ID => 1301 });
      }
    }
  }
  elsif ($FORM{change}) {
    $Triplay->user_change({
      UID   => $FORM{UID},
      TP_ID => $FORM{TRIPLAY_TP}
    });

    if (!$Triplay->{errno}) {
      $html->message('info', "$lang{SUCCESS}", "$lang{CHANGED}");
    }
  }
  elsif($FORM{del} && $FORM{COMMENT}) {
    $Triplay->user_del({ UID => $FORM{UID} });
    if (!$Triplay->{errno}) {
      $html->message('success', "$lang{USER} $lang{DELETED}");
    }
  }

  _error_show($Triplay);

  my $user_info = $Triplay->user_info({ UID => $FORM{UID} });

  if ($user_info->{TOTAL} && $user_info->{TOTAL} > 0) {
    $Triplay->{ACTION_LNG} = $lang{CHANGE};
    $Triplay->{ACTION} = 'change';

    my $tp_info = $Triplay->tp_info({ ID => $user_info->{TP_ID} });

    $services_info = $html->tpl_show(_include('triplay_sevices_info', 'Triplay'), {
      DV_TP    => $tp_info->{internet_name},
      VOIP_TP  => $tp_info->{voip_name},
      IPTV_TP  => $tp_info->{iptv_name},
      INTERNET => "$SELF_URL?index=" . get_function_index('internet_user') . "UID=" . ($FORM{UID} || q{}),
      VOIP     => "$SELF_URL?index=" . get_function_index('voip_user') . "UID=" . ($FORM{UID} || q{}),
      IPTV     => "$SELF_URL?index=" . get_function_index('iptv_user') . "UID=" . ($FORM{UID} || q{}),
    }, { OUTPUT2RETURN => 1 });
  }

  $Triplay->{TP_SEL} = $html->form_select(
    'TP_ID',
    {
      SELECTED      => $FORM{TP_ID} || $user_info->{TP_ID},
      SEL_LIST      => $Triplay->tp_list({ COLS_NAME => 1 }),
      # SEL_KEY       => 'id',
      # SEL_VALUE     => 'name',
      NO_ID         => 1,
      MAIN_MENU     => get_function_index('triplay_tp'),
      MAIN_MENU_ARGV=> "chg=". ($FORM{ER} || q{}),
    }
  );

  $Triplay->{STATUS_SEL} = sel_status({
    STATUS    => $Triplay->{STATUS},
    EX_PARAMS => (defined($Triplay->{STATUS}) && (!$attr->{REGISTRATION} && !$permissions{0}{18})) ? " disabled=disabled" : ''
  }, $Triplay->{SHEDULE} || {});


  my $result = $html->tpl_show(_include('triplay_user', 'Triplay'), {
    %{ $Triplay },
    INDEX         => get_function_index('triplay_user'),
    UID           => $FORM{UID},
    SERVICES_INFO => $services_info
  },
    { ID => 'triplay_service', OUTPUT2RETURN => 1 });

  return $result if ($attr->{PROFILE_MODE});

  print $result;

  return 1;
}

1