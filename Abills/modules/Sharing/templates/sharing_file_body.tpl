<style type="text/css">
  .panel-body{
    min-height: 200px;
  }
</style>

<div class='col-md-6'>
<div class='panel panel-%PANEL_TYPE%'>
<div class='panel-heading text-center'>%FILE_NAME%</div>
<div class='panel-body'>
  <div class='form-group'>
    <label class='col-md-12'>_{COMMENTS}_</label>
    <div class='col-md-12'>%COMMENT%</div>
  </div>
  <div class='form-group'>
    <label class='col-md-12'>_{AMOUNT}_</label>
    <div class='col-md-12'>%AMOUNT%</div>
  </div>
  <div class='form-group'>
    <label class='col-md-12'>_{TIME_FOR_FILE}_</label>
    <div class='col-md-12'>%FILE_TIME%</div>
  </div>
  <div class='form-group'>
    <label class='col-md-12'>%DATE_TO%</label>
  </div>
</div>
<div class='panel-footer text-center'>%BUTTON%</div>
</div>
</div>