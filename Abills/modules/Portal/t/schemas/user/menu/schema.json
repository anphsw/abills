      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "news": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "id": {
            "type": "integer"
          },
          "importance": {
            "type": "integer"
          },
          "picture": {
            "type": "string"
          },
          "shortDescription": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
          "onMainPage": {
            "type": "integer"
          },
          "topicId": {
            "type": "integer"
          },
          "url": {
            "type": "string"
          }
        },
        "required": [
          "content",
          "id",
          "importance",
          "picture",
          "shortDescription",
          "title",
          "date",
          "onMainPage",
          "topicId",
          "url"
        ]
      }
