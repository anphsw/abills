{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "news": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "id": {
            "type": "integer"
          },
          "importance": {
            "type": "integer"
          },
          "onMainPage": {
            "type": "integer"
          },
          "permalink": {
            "type": "string"
          },
          "picture": {
            "type": "string"
          },
          "shortDescription": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "topicId": {
            "type": "integer"
          },
          "url": {
            "type": "url"
          }
        },
        "required": [
          "content",
          "date",
          "id",
          "importance",
          "onMainPage",
          "permalink",
          "picture",
          "shortDescription",
          "title",
          "topicId",
          "url"
        ]
      }
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name",
          "url"
        ]
      }
    }
  },
  "required": [
    "news",
    "topics"
  ]
}
