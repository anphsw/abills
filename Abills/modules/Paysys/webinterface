if (form_purchase_module({
  HEADER          => $user->{UID},
  MODULE          => 'Paysys',
  REQUIRE_VERSION => 9.10
  })) {
  print $@;
  exit;
}

our Users $user;
our ($db,
  %conf,
  $admin,
  $op_sid,
  %lang,
  $base_dir,
  %ADMIN_REPORT,
  @WEEKDAYS,
  @MONTHES,
  $PAYSYSTEM_NAME,
  $PAYSYSTEM_IP,
  $PAYSYSTEM_VERSION,
  %PAYSYSTEM_CONF,
  %permissions
);

our Abills::HTML $html;
our $Payments = Finance->payments($db, $admin, \%conf);
our $Fees     = Finance->fees($db, $admin, \%conf);
our $Paysys   = Paysys->new($db, $admin, \%conf);

our @status = (
  $lang{UNKNOWN}, #0
  $lang{TRANSACTION_PROCESSING}, #1
  $lang{COMPLETE}, #2
  $lang{CANCELED}, #3
  $lang{EXPIRED}, #4
  $lang{ERR_INCORRECT_CHECKSUM}, #5
  $lang{PAYMENT_ERROR}, #6
  $lang{DUPLICATE}, #7
  $lang{USER_ERROR}, #8
  $lang{USER_NOT_EXIST}, #9
  $lang{SMALL_PAYMENT_SUM}, #10
  'SQL_ERROR',                #11
  'TEST',                     #12
  'WAIT',                     #13
  'REJECT',                   #14
  'UNPAID',                   #15
  'WRONG_SUM',                #16
  'PAYMENT_SQL_ERROR',        #17
);

our @status_color = ('',
  '#F1AD46',
  '#008000',
  '#FF0000',
  '#FF00FF',
  '#808080',
  '#ff2318',
  '#000080',
  '#fff208',
  '#00c5d0',
  '#008080',
  '#00FF00',
  '#060800',
  '#b0d000',
  '#ff7418',
  '#005800',
  '#0a0068',
  '#004a58');

require Paysys::Paysys_Base;

if(%ADMIN_REPORT) {
  require Paysys::Periodic;
}
elsif($conf{PAYSYS_NEW_SCHEME}){
  if($permissions{4}) {
    require Paysys::Configure;
    require Paysys::t::Paysys_Test;
  }
