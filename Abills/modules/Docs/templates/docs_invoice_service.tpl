<div class="form-group row">
  <label for="order" class="col-sm-4 col-md-4 col-form-label">ID</label>
  <div class="col-sm-8 col-md-8">
    %ORDER%
  </div>
</div>
<div class="form-group row">
  <label for="date_order" class="col-sm-4 col-md-4 col-form-label">_{DATE}_</label>
  <div class="col-sm-8 col-md-8">
    <input type="text" class="form-control" id="date_order" placeholder="_{DATE}_" readonly value="%DATE%">
  </div>
</div>
<div class="form-group row">
  <label for="login_order" class="col-sm-4 col-md-4 col-form-label">_{LOGIN}_</label>
  <div class="col-sm-8 col-md-8">
    <input type="text" class="form-control" id="login_order" placeholder="_{LOGIN}_" readonly value="%LOGIN%">
  </div>
</div>
<div class="form-group row">
  <label for="dsc_order" class="col-sm-4 col-md-4 col-form-label">_{DESCRIBE}_</label>
  <div class="col-sm-8 col-md-8">
    <input type="text" class="form-control" id="dsc_order" placeholder="_{DESCRIBE}_" readonly value="%DESCRIBE%">
  </div>
</div>
<div class="form-group row">
  <label for="sum_order" class="col-sm-4 col-md-4 col-form-label">_{SUM}_</label>
  <div class="col-sm-8 col-md-8">
    <input type="text" class="form-control" id="sum_order" placeholder="_{SUM}_" readonly value="%SUM%">
  </div>
</div>
<div class="form-group row">
  <label for="tax_order" class="col-sm-4 col-md-4 col-form-label">_{TAX}_</label>
  <div class="col-sm-8 col-md-8">
    <input type="text" class="form-control" id="tax_order" placeholder="_{TAX}_" readonly value="%TAX%">
  </div>
</div>
